{
  "type": "ars_nouveau:imbuement",
  "name": "Imbuement",
  "category": "Ars Nouveau",
  "inputs": [
    {
      "path": "input",
      "type": "ingredient",
      "gridx": 2,
      "gridy": 2,
      "single": true
    },
    {
      "path": "pedestalItems",
      "path:item": "item",
      "type": "ingredient",
      "gridx": 0.72222,
      "gridy": 0.5,
      "repeat": {
        "colspacing": 5,
        "shape": "array",
        "rows": 1,
        "cols": 3
      },
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "output",
      "path:count": "count",
      "type": "itemstack",
      "gridx": 6,
      "gridy": 2,
      "style": "large",
      "allowtag": false
    }
  ],
  "parameters": [
    {
      "path": "source",
      "label": "Source",
      "type": "number",
      "default": "100",
      "gridx": 4,
      "gridy": 4,
      "gridw": 3
    }
  ],
  "illustrations": [
    {
      "type": "left_arrow",
      "gridx": 4,
      "gridy": 2
    },
    {
      "type": "item",
      "item": "minecraft:blast_furnace",
      "gridx": 0,
      "gridy": 3
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<snippet:JSON:Datapack>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "flags": "prettyjson",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{\"type\":\"<<type>>\",",
            "\"input\":<<ingredient:input>>,",
            "\"output\":<<item-id:output>>,",
            "\"count\":<<item-count:output>>,",
            "\"source\":<<parameter:source>>,"
          ]
        },
        {
          "title": "itemloop",
          "loop": "pedestalItems",
          "fragments": [
            "{\"item\":<<ingredient:pedestalItems[<<loop>>]>>}"
          ],
          "prefix": "\"pedestalItems\":[",
          "postfix": "]",
          "join": ","
        },
        {
          "title": "closing",
          "fragments": [
            "}"
          ]
        }
      ]
    }
  ]
}
