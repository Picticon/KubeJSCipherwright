{
  "type": "ars_nouveau:enchanting_apparatus",
  "name": "Enchanting Apparatus",
  "category": "Ars Nouveau",
  "inputs": [
    {
      "path": "reagent",
      "type": "ingredient",
      "gridx": 1.25,
      "gridy": 1.25,
      "single": true,
      "bgitem": "ars_nouveau:enchanting_apparatus"
    },
    {
      "path": "pedestalItems",
      "type": "ingredient",
      "gridx": 0.72222,
      "gridy": 0.5,
      "xbgitem": "ars_nouveau:pedestal",
      "bgitem": "ars_nouveau:arcane_pedestal",
      "repeat": {
        "shape": "absolute",
        "gridcoordinates": [
          1.25,
          0,
          2.5,
          0,
          2.5,
          1.25,
          2.5,
          2.5,
          1.25,
          2.5,
          0,
          2.5,
          0,
          1.25,
          0,
          0
        ]
      },
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "output",
      "type": "itemstack",
      "gridx": 6,
      "gridy": 2,
      "style": "large",
      "allowtag": false
    }
  ],
  "parameters": [
    {
      "path": "sourceCost",
      "label": "Source",
      "type": "number",
      "default": "0",
      "gridx": 4,
      "gridy": 4,
      "gridw": 3
    }
  ],
  "illustrations": [
    {
      "type": "left_arrow",
      "gridx": 4,
      "gridy": 2
    },
    {
      "type": "highlight",
      "gridx": 1.25,
      "gridy": 1.25
    },
    {
      "type": "item",
      "item": "ars_nouveau:enchanting_apparatus",
      "gridx": 4,
      "gridy": 0
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<snippet:JSON:Datapack>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{",
            "\"type\":\"<<type>>\",",
            "\"input\":<<ingredient:reagent>>,",
            "\"output\":<<item-id:output>>,",
            "\"count\":<<item-count:output>>,",
            "\"sourceCost\":<<parameter:sourceCost>>,",
            "\"pedestalItems\":<<ingredients:pedestalItems>>",
            "}"
          ]
        }
      ]
    }
  ]
}
