{
  "type": "botania:mana_infusion",
  "name": "Mana Infusion",
  "category": "Botania",
  "inputs": [
    {
      "path": "input",
      "type": "ingredient",
      "gridx": 0,
      "gridy": 0,
      "single": true
    },
    {
      "path": "catalyst.block",
      "type": "ingredient",
      "gridx": 0,
      "gridy": 4,
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "output",
      "type": "itemstack",
      "gridx": 3,
      "gridy": 0,
      "allowtag": false
    }
  ],
  "parameters": [
    {
      "path": "mana",
      "label": "Mana",
      "type": "number",
      "default": "120",
      "gridx": 4,
      "gridy": 4,
      "gridw": 3,
      "h": 10
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<snippet:JSON:Datapack>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "KubeJS Addon",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output>>"
          ]
        },{
          "title": "Create",
          "fragments": [
            "event.recipes.botania.elven_trade(<<itemstacks:output>>,<<ingredients:ingredients>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "flags": "prettyjson",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{\"type\":\"<<type>>\",\"catalyst\":{type:\"block\",\"block\":<<item-id:catalyst.block>>},\"input\":<<ingredient:input>>,\"output\":<<itemstack:output>>,\"mana\":<<parameter:mana>>}"
          ]
        }
      ]
    }
  ]
}

