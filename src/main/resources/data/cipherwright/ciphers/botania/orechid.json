{
  "type": "botania:orechid",
  "name": "Orechid",
  "category": "Botania",
  "inputs": [
    {
      "path": "input.block",
      "type": "ingredient",
      "gridx": 0,
      "gridy": 0,
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "output.block",
      "type": "itemstack",
      "gridx": 3,
      "gridy": 0,
      "allowtag": false
    }
  ],
  "parameters": [
    {
      "path": "weight",
      "label": "Weight",
      "type": "number",
      "default": "500",
      "gridx": 4,
      "gridy": 4,
      "gridw": 3
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<snippet:JSON:Datapack>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "flags": "prettyjson",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{\"type\":\"<<type>>\",\"input\":{type:\"block\",\"block\":<<item-id:input.block>>},\"output\":{\"type\":\"block\",\"block\":<<item-id:output.block>>},\"weight\":<<parameter:weight>>}"
          ],
          "flags": "prettyjson"
        }
      ]
    }
  ]
}



