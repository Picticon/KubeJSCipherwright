{
  "type": "botania:terra_plate",
  "name": "Terra Plate",
  "category": "Botania",
  "inputs": [
    {
      "path": "ingredients",
      "type": "ingredient",
      "gridx": 0,
      "gridy": 0,
      "repeat": {
        "shape": "array",
        "rows": 3,
        "cols": 3
      },
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "result",
      "type": "itemstack",
      "gridx": 5,
      "gridy": 0,
      "allowtag": false
    }
  ],
  "parameters": [
    {
      "path": "mana",
      "label": "Mana",
      "type": "number",
      "default": "500000",
      "gridx": 4,
      "gridy": 7,
      "gridw": 3
    }
  ],
  "illustrations": [
    {
      "type": "left_arrow",
      "gridx": 3.3,
      "gridy": 1
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:result>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<snippet:JSON:Datapack>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "flags": "prettyjson",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{",
            "\"type\":\"<<type>>\",",
            "\"ingredients\":<<ingredients:ingredients>>,",
            "\"result\":<<itemstack:result>>,",
            "\"mana\":<<parameter:mana>>",
            "}"
          ]
        }
      ]
    }
  ]
}

