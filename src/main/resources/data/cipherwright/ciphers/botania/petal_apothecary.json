{
  "type": "botania:petal_apothecary",
  "name": "Petal Apothecary",
  "category": "Botania",
  "inputs": [
    {
      "path": "ingredients",
      "type": "ingredient",
      "gridx": 3,
      "gridy": 3,
      "repeat": {
        "shape": "oval",
        "segments": 8,
        "radiusx": 2.5,
        "radiusy": 2.5
      },
      "single": true
    },
    {
      "path": "reagent",
      "type": "ingredient",
      "gridx": 3,
      "gridy": 1.8,
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "output",
      "type": "itemstack",
      "gridx": 3,
      "gridy": 3.4,
      "large": true,
      "allowtag": false
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<snippet:JSON:Datapack>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "flags": "prettyjson",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{\"type\":\"<<type>>\",\"ingredients\":<<ingredients:ingredients>>,\"output\":<<itemstack:output>>,\"reagent\":<<ingredient:reagent>>}"
          ]
        }
      ]
    }
  ]
}