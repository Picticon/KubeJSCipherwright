{
  "type": "botania:pure_daisy",
  "name": "Pure Daisy",
  "category": "Botania",
  "inputs": [
    {
      "path": "input.block",
      "type": "ingredient",
      "gridx": 0,
      "gridy": 0,
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "output.name",
      "type": "itemstack",
      "gridx": 3,
      "gridy": 0,
      "allowtag": false,
      "single": true
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output.name>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<snippet:JSON:Datapack>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "flags": "prettyjson",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{",
            "\"type\":\"<<type>>\",",
            "\"input\":{type:\"block\",",
            "\"block\":<<item-id:input.block>>},",
            "\"output\":{\"name\":<<item-id:output.name>>}",
            "}"
          ]
        }
      ]
    }
  ]
}



