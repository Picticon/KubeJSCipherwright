{
  "type": "botania:runic_altar",
  "name": "Runic Altar",
  "category": "Botania",
  "inputs": [
    {
      "path": "ingredients",
      "type": "ingredient",
      "gridx": 3,
      "gridy": 3,
      "repeat": {
        "shape": "oval",
        "segments": 10,
        "radiusx": 2.5,
        "radiusy": 2.5
      },
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "output",
      "type": "itemstack",
      "gridx": 3,
      "gridy": 3,
      "large": true,
      "allowtag": false
    }
  ],
  "parameters": [
    {
      "path": "mana",
      "label": "Mana",
      "type": "number",
      "default": "5000",
      "gridx": 4,
      "gridy": 7,
      "gridw": 3,
      "h": 10
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<snippet:JSON:Datapack>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:'<<oldid>>'});"
          ]
        }
      ]
    },
    {
      "name": "KubeJS Addon",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:output>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.recipes.botania.runic_altar(<<itemstack:output>>, <<ingredients:ingredients>>, <<parameter:mana>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:'<<oldid>>'});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{'type':'<<type>>','ingredients':<<ingredients:ingredients>>,'output':<<itemstack:output>>,'mana':<<parameter:mana>>}"
          ],
          "flags": "prettyjson"
        }
      ]
    }
  ]
}