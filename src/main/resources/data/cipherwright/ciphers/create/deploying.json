{
  "type": "create:deploying",
  "name": "Deploying",
  "category": "Create",
  "inputs": [
    {
      "type": "ingredient",
      "single": true,
      "path": "ingredients",
      "repeat": {
        "shape": "absolute",
        "gridcoordinates": [
          0,
          3,
          0,
          0
        ]
      }
    }
  ],
  "outputs": [
    {
      "path": "results",
      "type": "itemstack",
      "gridx": 3,
      "gridy": 3,
      "repeat": {
        "shape": "array",
        "rows": 1,
        "cols": 1
      },
      "allowtag": false
    }
  ],
  "illustrations": [
    {
      "type": "left_arrow",
      "gridx": 1.4,
      "gridy": 3
    },
    {
      "type": "down_arrow",
      "gridx": 0,
      "gridy": 1.5
    }
  ],
  "parameters": [
    {
      "path": "keepHeldItem",
      "type": "boolean",
      "label": "Keep Held Item?",
      "flags": "right",
      "gridx": 1,
      "gridy": 0
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:results>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<template:JSON>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{",
            "\"type\":\"<<type>>\",",
            "\"ingredients\":<<ingredients:ingredients>>,",
            "\"results\":<<itemstacks:results>>"
          ]
        },
        {
          "title": "heating",
          "condition": "parameter:keepHeldItem:equals:true",
          "fragments": [
            ",\"keepHeldItem\":<<parameter:keepHeldItem>>"
          ]
        },
        {
          "title": "closing",
          "fragments": [
            "}"
          ]
        }
      ]
    }
  ]
}