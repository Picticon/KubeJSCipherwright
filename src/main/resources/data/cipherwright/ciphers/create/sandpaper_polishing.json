{
  "type": "create:sandpaper_polishing",
  "name": "Sandpaper Polishing",
  "category": "Create",
  "inputs": [
    {
      "type": "ingredient",
      "single": true,
      "path": "ingredients",
      "index": 0,
      "allowfluids": false,
      "gridx": 0,
      "gridy": 0
    }
  ],
  "outputs": [
    {
      "path": "results",
      "type": "itemstack",
      "allowtag": false,
      "allowfluids": false,
      "index": 0,
      "gridx": 0,
      "gridy": 2
    }
  ],
  "illustrations": [
    {
      "type": "down_arrow",
      "gridx": 3,
      "gridy": 0.7,
      "scale": 0.75
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:results>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<template:JSON>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{\"type\":\"<<type>>\",\"ingredients\":<<ingredients:ingredients>>,\"results\":<<itemstacks:results>>}"
          ]
        }
      ]
    }
  ]
}