{
  "type": "create:mechanical_crafting",
  "name": "Mechanical Crafting",
  "category": "Create",
  "inputs": [
    {
      "path": "pattern",
      "key": "key",
      "type": "shaped",
      "gridx": 0,
      "gridy": 0,
      "repeat": {
        "shape": "array",
        "rows": 9,
        "cols": 9
      },
      "single": true
    }
  ],
  "outputs": [
    {
      "path": "result",
      "type": "itemstack",
      "gridx": 10,
      "gridy": 4,
      "large": true,
      "allowtag": false
    }
  ],
  "illustrations": [
    {
      "type": "down_arrow",
      "gridx": 10,
      "gridy": 2.5
    }
  ],
  "parameters": [
    {
      "path": "acceptMirrored",
      "type": "boolean",
      "label": "Accept Mirrored?",
      "flags": "right",
      "gridx": 0,
      "gridy": 9.1
    }
  ],
  "templates": [
    {
      "name": "KubeJS",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:result>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.shaped(<<itemstack:result>>, <<pattern:pattern>>, <<key:pattern>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "flags": "prettyjson",
      "snippets": [
        {
          "title": "JSON",
          "fragments": [
            "{\"type\":\"<<type>>\""
          ]
        },
        {
          "title": "acceptMirrored",
          "condition": "parameter:acceptMirrored:not:false",
          "fragments": [
            ",\"acceptMirrored\":<<parameter:acceptMirrored>>"
          ]
        },
        {
          "title": "closing",
          "fragments": [
            ",\"key\":<<key:pattern>>,\"pattern\":<<pattern:pattern>>,\"result\":<<itemstack:result>>}"
          ]
        }
      ]
    }
  ]
}