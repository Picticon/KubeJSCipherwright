{
  "type": "create:splashing",
  "name": "Splashing",
  "category": "Create",
  "inputs": [
    {
      "type": "ingredients",
      "gridx": 3,
      "gridy": 0,
      "single": true,
      "path": "ingredients",
      "index": 0
    }
  ],
  "outputs": [
    {
      "path": "results",
      "type": "itemstack",
      "gridx": 2,
      "gridy": 2,
      "repeat": {
        "shape": "array",
        "rows": 3,
        "cols": 3
      },
      "members": [
        {
          "path": "chance",
          "type": "number",
          "label": "Chance %",
          "flags": "right",
          "display": "percent top-left"
        }
      ],
      "allowtag": false
    }
  ],
  "illustrations": [
    {
      "type": "down_arrow",
      "gridx": 3,
      "gridy": 0.7,
      "scale": 0.75
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:results>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<template:JSON>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "flags": "prettyjson",
      "snippets": [
        {
          "title": "Datapack",
          "flags": "prettyjson",
          "fragments": [
            "{\"type\":\"<<type>>\",\"ingredients\":<<ingredients:ingredients>>,\"results\":<<itemstacks:results>>"
          ]
        },
        {
          "title": "closing",
          "fragments": [
            "}"
          ]
        }
      ]
    }
  ]
}