{
  "type": "create:pressing",
  "name": "Pressing",
  "category": "Create",
  "inputs": [
    {
      "type": "ingredient",
      "gridx": 0,
      "gridy": 0,
      "single": true,
      "path": "ingredients",
      "repeat": {
        "shape": "array",
        "rows": 3,
        "cols": 3
      },
      "allowfluid": true,
      "allowfluidtag": true,
      "allowtag": true
    }
  ],
  "outputs": [
    {
      "path": "results",
      "type": "itemstack",
      "gridx": 1,
      "gridy": 5,
      "index": 0,
      "allowtag": false,
      "allowfluid": true
    }
  ],
  "illustrations": [
    {
      "type": "down_arrow",
      "gridx":1,
      "gridy": 3.2 
    }
  ],
  "parameters": [
    {
      "path": "heatRequirement",
      "label": "Heat",
      "type": "combo",
      "options": [
        "none",
        "heated",
        "superheated"
      ],
      "descriptions": [
        "None",
        "Heated",
        "Super Heated"
      ],
      "gridx": 4,
      "gridy": 5,
      "gridw": 4
    }
  ],
  "templates": [
    {
      "name": "KubeJS Custom",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:results>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.custom(<<template:JSON>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "snippets": [
        {
          "title": "Datapack",
          "fragments": [
            "{\"type\":\"<<type>>\",\"ingredients\":<<ingredients:ingredients>>,\"results\":<<itemstacks:results>>"
          ]
        },
        {
          "title": "heating",
          "condition": "parameter:heatRequirement:not:none",
          "fragments": [
            ",\"heatRequirement\":<<parameter:heatRequirement>>"
          ]
        },
        {
          "title": "closing",
          "fragments": [
            "}"
          ]
        }
      ]
    }
  ]
}