{
  "type": "minecraft:smithing_transform",
  "name": "Smithing Transform",
  "category": "Minecraft",
  "padtop": 12,
  "padbottom": 12,
  "padleft": 12,
  "padright": 12,
  "inputs": [
    {
      "type": "ingredient",
      "path": "template",
      "gridx": 0,
      "gridy": 0,
      "single": true
    },
    {
      "type": "ingredient",
      "path": "base",
      "gridx": 1,
      "gridy": 0,
      "single": true
    },
    {
      "type": "ingredient",
      "path": "addition",
      "gridx": 2,
      "gridy": 0,
      "single": true
    }
  ],
  "outputs": [
    {
      "type": "itemstack",
      "path": "result",
      "gridx": 4,
      "gridy": 0,
      "style": "large",
      "single": true,
      "allowtag": false
    }
  ],
  "illustrations": [
    {
      "type": "left_arrow",
      "gridx": 3,
      "gridy": 0
    },
    {
      "type": "item",
      "item": "minecraft:smithing_table",
      "gridx": 3,
      "gridy": 1
    }
  ],
  "templates": [
    {
      "name": "KubeJS",
      "format": "kubejs",
      "snippets": [
        {
          "title": "Comment",
          "condition": "comment",
          "fragments": [
            "// <<description:result>>"
          ]
        },
        {
          "title": "Create",
          "fragments": [
            "event.smithing(<<itemstack:result>>, <<ingredient:template>>, <<ingredient:base>>, <<ingredient:addition>>);"
          ]
        },
        {
          "title": "Delete",
          "condition": "remove",
          "fragments": [
            "event.remove({id:\"<<oldid>>\"});"
          ]
        }
      ]
    },
    {
      "name": "JSON",
      "format": "json",
      "snippets": [
        {
          "title": "JSON",
          "fragments": [
            "{\"type\":\"<<type>>\",",
            "\"addition\":{\"item\":<<ingredient:addition>>},",
            "\"base\":{\"item\":<<ingredient:base>>},",
            "\"template\":{\"item\":<<ingredient:template>>},",
            "\"result\":{\"item\":<<itemstack:result>>}",
            "}"
          ]
        }
      ]
    }
  ]
}